{
    "compilerOptions": {
        /* Visit https://aka.ms/tsconfig.json to read more about this file */

        /* Basic Options */
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": ".",

        /* Strict Type-Checking Options */
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": false,

        /* Module Resolution Options */
        "moduleResolution": "node",
    }
}